                </div>
              </div>
            </div>
          </nav>
          <section class="d-lg-flex flex-md-row-reverse px-4 mx-auto" style="min-height: 100%; background-image: url('https://www.colegiosantoantonio.com.br/wp-content/uploads/bfi_thumb/white-wallpaper-6-333rov3u0mcmdhx90lmz28.jpg'); background-repeat: no-repeat; background-size: 100% 100%;">
            <div class="d-flex justify-content-center align-self-center p-5">
              <img class="border border-dark rounded-circle" src="/images/me.png" alt="" style="max-width: 350px;">
            </div>
            <div class="container p-5 align-self-center">
              <h3 class="mb-4" style="font-size: 60px;">I'm a <span class="text-primary">Fullstack Developer</span></h3>
              <p class="mb-4 fs-4">Creator of powerfull apps, responsive web design and structured database management. Open for challenging project.</p>
              <a href="/contact" class="btn btn-primary px-3 py-1 me-3">Contact</a>
              <a href="" class="btn btn-outline-primary px-3 py-1">Download CV <i class="fa-solid fa-download"></i></a>
            </div>
          </section>
          <section>
            <div class="pt-3 bg-body-tertiary">
              <h3 class="mt-5 text-center">MY PROJECT</h3>
              <div id="project-blog" class="d-sm-flex container justify-content-around py-5 flex-wrap">
                  {{#each myblogs}}
                  <div class="card m-3 p-2" style="width: 18rem;">
                  <img src="/images/{{this.image}}" class="card-img-top" alt="Project1">
                    <div class="card-body">
                      <a class="link-offset-2 link-underline link-underline-opacity-0" href="/blog-page/{{this.id}}"><h5 class="card-title">{{this.title}}</h5></a>
                      <p>Duration: <span>{{this.duration}} Month</span></p>
                      <p class="card-text">{{this.description}}</p>
                      <p class="fs-4 ">
                        <i class="m-0 {{this.javascript}}"></i>
                        <i class="m-0 {{this.php}}"></i>
                        <i class="m-0 {{this.css}}"></i>
                        <i class="m-0 {{this.html}}"></i>
                      </p>
                      <div class="d-flex justify-content-between">
                        <a href="/edit-blog/{{this.id}}" class="btn btn-primary px-4 py-1 me-2 flex-fill">Edit</a>
                        <a href="/delete-blog/{{this.id}}" class="btn btn-primary px-4 py-1 flex-fill">Delete</a>
                      </div>
                    </div>
                  </div>
                  {{/each}}
              </div>
          </div>
